# 데이터베이스 설정
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=washing_machine_db

# JWT 시크릿 키
JWT_SECRET_KEY=your_super_secret

# Firebase 관리자 SDK
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# AI 제공자 설정
# 선택값: "openrouter", "google", "ollama"
AI_PROVIDER=openrouter

# OpenRouter 설정 (AI_PROVIDER=openrouter 인 경우)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-oss-120b
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Google Gemini 설정 (AI_PROVIDER=google 인 경우)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Ollama 설정 (AI_PROVIDER=ollama 인 경우)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# 기상청(KMA) 날씨 API 설정
KMA_AUTH_KEY=your_kma_auth_key_here
KMA_NX=59
KMA_NY=119
